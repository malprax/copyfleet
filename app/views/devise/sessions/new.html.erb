<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: "form-vertical"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, label: false, :placeholder => "Email", input_html: {class: "span12"} %>
    <%= f.input :password, :required => false, label: false, :placeholder => "Password", input_html: {class: "span12"} %>
    <% if devise_mapping.rememberable? %>
      <div class="row-fluid">
  			<label class="span8">
  				<input type="checkbox" name="user[remember_me]" id="user_remember_me"><span class="lbl"> Remember Me</span>
  			</label>
  			<button class="span4 btn btn-small btn-primary"><i class="icon-key"></i> Login</button>
  		</div>
		<% end %>
  </div>
<% end %>
<%#= render "devise/shared/links" %>
